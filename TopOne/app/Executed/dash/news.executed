<?php

if(!empty($_POST)) {
	
	$NewsletterManager = new NewsletterManager(new SqlManager());
	
	if($_POST["type"] == "add") {
		
		if(empty($_POST["title"])) {
			
			return;
			
		}
		
		$connect = $NewsletterManager->registerNews(htmlentities($_POST["title"]), htmlentities($_POST["message"]));
		
		if(!empty($connect)) {
			
			success_add();
			echo '<meta http-equiv="refresh" content="3">';
			
		} else {
			
			error_add();
			
		}
		
	}
	
	if($_POST["type"] == "remove") {
		
		$connect = $NewsletterManager->removeNews(htmlentities($_POST["id"]));
		
		if($connect) {
			
			success_remove();
			echo '<meta http-equiv="refresh" content="3">';
			
		} else {
			
			error_remove();
			
		}
		
	}
	
}

function error_remove() {
	
	?>
	
	<script type="text/javascript">

			Swal.fire({
				
			  icon: 'error',
			  title: 'Oops...',
			  text: 'Impossible de supprimer cette news'
				  
			})
	
		</script>
	
	<?php
	
}

function success_add() {
	
	?>
	
	<script type="text/javascript">

			Swal.fire({
				
				icon: 'success',
				title: 'Bon Travail',
				text: 'News cr√©er !'
				  
			})
	
		</script>
	
	<?php
	
}

function success_remove() {
	
	?>
	
	<script type="text/javascript">

			Swal.fire({
				
				icon: 'success',
				title: 'Bon Travail',
				text: 'News supprimer !'
				  
			})
	
		</script>
	
	<?php
	
}

?>